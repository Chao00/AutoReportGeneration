<div class="login">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <h1><%= title %></h1>

        <form id="inputForm" method="post">
            <input type="Email" name="Email" placeholder="Email to receive the report" required="required"/>


            <label for="from">From</label>
            <input type="date" name="from" id="from" required="required"/>


            <label for="to">To</label>
            <input type="date" name="to" id="to" required="required"/>

            <% if(title === "Policy transfer report" || title === "Retry Failed"){ %>
            <p>
                <select name="options" id="selectOne">
                    <option>Send both if not specified</option>
                    <option>P2V-POLICY-TRANSFER-STATUS</option>
                    <option>V2P-POLICY-TRANSFER-STATUS</option>
                </select>
            </p>
            <% } else if (title === "Error grouping" ){ %>
            <p>
                <select name="options" id="selectOne">
                    <option>P2V-POLICY-TRANSFER-STATUS</option>
                    <option>V2P-POLICY-TRANSFER-STATUS</option>
                </select>
            </p>
            <% } %>

            <button type="submit" class="btn btn-primary btn-block btn-large">Generate report</button>
        </form>
    </div>
</div>

